<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" 
	xmlns="http://java.sun.com/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="EstagioRelatorioJPA" transaction-type="RESOURCE_LOCAL">
	<provider>org.hibernate.ejb.HibernatePersistence</provider>
	
	<class>br.com.clogos.estagio.model.CampoEstagio</class>
	<class>br.com.clogos.estagio.model.Supervisor</class>
	<class>br.com.clogos.estagio.model.ImagemAssinatura</class>
	<class>br.com.clogos.estagio.model.Aluno</class>
	<class>br.com.clogos.estagio.model.Relatorio</class>
	<class>br.com.clogos.estagio.model.LiberarRelatorio</class>
	
	<exclude-unlisted-classes>true</exclude-unlisted-classes>
	<properties>
		<property name="javax.persistence.jdbc.url" value="jdbc:jtds:sqlserver://localhost/relestagio"></property>
	   	<property name="javax.persistence.jdbc.user" value="uniweb"></property>
	   	<property name="javax.persistence.jdbc.password" value="#uniweb!"></property> 
	   	<property name="javax.persistence.jdbc.driver" value="net.sourceforge.jtds.jdbc.Driver"></property>
	   	<property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect"></property>
	   	<property name="hibernate.hbm2ddl.auto" value="update"></property>
	</properties>
		
	</persistence-unit>
</persistence>
